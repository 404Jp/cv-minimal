---
import { IExperiences } from "@types";
import Timeline from "./Timeline.astro";
import Menu from "./Menu.astro";
import Profile from "./Profile.astro";

const { title, details } = Astro.props as IExperiences;
---

<section class="flex flex-col items-center justify-between dark:text-light">
  <h2 class="w-[15rem] mt-16 text-center">{title}</h2>
  <div class="w-full">
    {details.map((item) => (
      <div class="my-16">
        <div class="flex flex-col items-center">
          <br>
          <Profile/>
          <br>
          <h3 class="text-xl font-semibold text-center">{item.name}</h3>
          <p class="text-sm mt-3 text-white text-center">Portafolio Web</p>
          <p class="text-sm mt-3 text-blue text-center">{item.location}</p>
          <ul class="mt-3 text-center">
            {item.description.map((desc) => (
              <li class="dark:text-gray">{desc}</li>
            ))}
          </ul>
          <br>
          <Menu/>
        </div>
      </div>
    ))}
    
  </div>
</section>
