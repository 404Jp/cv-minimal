---
import { IExperiences } from "@types";
import RRSS from "@components/general/RRSS.astro";

const { title, details } = Astro.props as IExperiences;
---

<section
  class="flex items-start justify-between flex-col sm:flex-row dark:text-light"
>
  <h2 class="w-[15rem] mt-16">{title}</h2>
  <div class="w-full">
    {
      details.map((item) => (
      <div class="my-16">
        <div class="flex flex-col items-center">
          <h3 class="text-xl font-semibold">{item.name}</h3>
          <p class="text-sm mt-3 text-blue">{item.location}</p>
        
          <ul class="mt-3 text-center">
            {item.description.map((item) => (
              <li class="dark:text-gray">{item}</li>
              
            ))}
          </ul>
        </div>
        <div class="flex justify-center mt-3">
          <a href="#educ"class="dark:text-light block text-lg mx-4">#Educaci√≥n</a>
          <a href="#exproj"class="dark:text-light block text-lg mx-4">#Proyectos</a>
          <a href="#cert"class=" dark:text-light block text-lg mx-4">#Certificados</a>
        </div>
      </div>
      ))} 
      
   <RRSS/>
   
  </div>
</section>


