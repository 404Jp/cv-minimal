---
import { info } from "@data";
import ProjectsWrapper from "@components/general/ProjectsWrapper.astro";
import MetaHead from "@components/general/MetaHead.astro";
import Layout from "@layouts/Layout.astro";
import RRSS from "@components/general/RRSS.astro";
const Projects = info.projects.map((project) => project);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <MetaHead
      title={"Proyectos"}
      description={"All projects are available in this page."}
      ogImageUrl={"/assets/images/profile.png"}
    />
  </head>

  <body>
    <Layout>
      <h1 style="margin-top: 8rem; line-height: 1.2;">Proyectos</h1>
      <br>
      <p class="mb-3 text-lg text-gray-500 md:text-xl dark:text-white">He aquí algunos de mis proyectos más significativos.</p>
      <p class="text-gray-500 dark:text-white">Llevo a cabo proyectos que coinciden con mis intereses personales y áreas de especialización, esforzándome continuamente por mejorar mis habilidades y conocimientos. </p>
      <br>
      <RRSS/>
      <ProjectsWrapper projects={Projects} />
    </Layout>
  </body>
</html>
